<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SelectActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/colorFont"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="FROM"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/colorFont"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinner_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f9d1d1"
        android:popupBackground="@drawable/rate_select_back"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="50sp"
        android:paddingRight="-10sp"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="TO"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/colorFont"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinner_to"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f9d1d1"
        android:popupBackground="@drawable/rate_select_back"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="50sp"
        android:paddingRight="-10sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/inputMoney"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/edit_text"
        android:textColor="@color/colorAccent2"
        android:fontFamily="@font/righteous"
        android:hint="Enter money...."
        android:textColorHint="@color/colorAccent1"
        android:padding="10sp"
        android:inputType="number" />

    <Button
        android:id="@+id/change_btn"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginLeft="75sp"
        android:layout_marginRight="75sp"
        android:layout_marginTop="20sp"
        android:paddingBottom="5sp"
        android:textColor="@color/colorAccent2"
        android:background="@drawable/change_btn"
        android:text="CHANGE"
        android:textSize="30sp"
        android:fontFamily="@font/righteous" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#00FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:weightSum="4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/act_home"
                android:src="@drawable/ic_home"
                android:padding="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/act_change"
                android:src="@drawable/ic_change"
                android:padding="10sp"
                android:layout_weight="1"
                android:background="@drawable/footer_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/act_result"
                android:src="@drawable/ic_result"
                android:padding="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/act_settings"
                android:src="@drawable/ic_settings"
                android:padding="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>